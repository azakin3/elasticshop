{
    "settings": {
        "analysis": {
            "analyzer": {
                "hunspell_cs": {
                    "type": "custom",
                    "char_filter": [
                        "html_strip"
                    ],
                    "tokenizer": "standard",
                    "filter": [
                    	"shingle_filter",
                        "pattern_replacement",
                        "cs_CZ",
                        "synonym_filter",
                        "icu_folding",
                        "remove_duplicities"
                    ]
                }
            },
            "filter": {
                "pattern_replacement": {
                    "type": "pattern_replace",
                    "preserve_original": 1,
                    "pattern": "\\b(\\w{1,3})\\s+(\\w{1,3})\\b",
                    "replacement": "$1$2"
                },
                "stopwords_CZ": {
                    "type": "stop",
					"stopwords" : ["_czech_"],
                    "ignore_case": true
                },
                "cs_CZ": {
                    "type": "hunspell",
                    "locale": "cs_CZ",
                    "dedup": true
                },
                "synonym_filter": {
                    "type": "synonym",
                    "synonyms": [
                        "mobil,mobiln√≠ telefon"
                    ]
                },
                "remove_duplicities": {
                    "type": "unique",
                    "only_on_same_position": false
                },
                "shingle_filter": {
					"type": "shingle",
					"max_shingle_size": 3,
					"filler_token": ""
		        }
            }
        }
    },
    "mappings": {
        "product": {
            "properties": {
                "brand_id": {
                    "type": "string",
                    "index": "not_analyzed"
                },
                "category": {
                    "type": "string",
                    "index": "not_analyzed"
                },
                "category_id": {
                    "type": "string",
                    "index": "not_analyzed"
                },
                "description": {
                    "type": "string",
                    "index": "not_analyzed"
                },
                "title": {
                    "type": "string",
                    "index": "analyzed",
                    "analyzer": "hunspell_cs"
                },
                "url_key": {
                    "type": "string",
                    "index": "not_analyzed"
                }
            }
        }
    }
}